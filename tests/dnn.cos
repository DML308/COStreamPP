composite Main() {
    stream<double x> In, Out, Data, Y;
    In = FileReader()("mnist-train.csv", 785);
    (Data, Y) = preprocess(In) {
        work {
            int i, j;
            for(i = 0; i < 784; i++) {
                In[i].x = In[i].x/255;
            }
            for(j = 0; j < 10; j++) {
                Y[j].x = In[i].x == j ? 1 : 0;
            }
        }
        window {
            In sliding(784, 784);
            Data tumbling(784);
            Y tumbling(10);
        }
    };
    // inputs_size, lr, batch, lossFunc, initializer
    Out = sequential (Data, Y) (784, 0.001, 100, "crossEntropy", 'gaussRandom') {
        add Dense(200, 1);
        add Activation("relu");
        add Dense(100, 1);
        add Dense(10);
        add Dropout(0.25);
        add Activation("softmax");
    };
    sink(Out) {
        work {
        }
        window{
            Out sliding(784, 784);
        }
    };
}